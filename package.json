  "version": "1.2.2",
  "type": "module",
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "format": "prettier --check \"**/*.{js,cjs,ts,json,md}\"",
    "lint": "eslint --ext .js,.cjs,.ts .",
