  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.12.0",
    "@vitest/coverage-istanbul": "^3.0.4",
    "execa": "^9.5.2",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "rollup": "^4.32.1",
    "rollup-plugin-dts": "^6.1.1",
    "typescript": "^5.7.3",
    "vitepress": "^1.6.3",
    "vitest": "^3.0.4",
    "xo": "^0.60.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "search-insights",
        "webpack"
